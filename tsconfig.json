{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "paths": {
      "#remix_app/*": ["./resources/remix_app/*"]
    }
  },
  // SJS - to allow node to recognize .ts files
  "ts-node": {
      "esm": true
  }
}
